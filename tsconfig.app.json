{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "incremental": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",

        "allowJs": true, // keep untill fix all jsx files
        "checkJs": true, // keep untill fix all jsx files

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "assets/*": ["./src/assets/*"],
            "components/*": ["./src/components/*"],
            "constants/*": ["./src/config/constants/*"],
            "hooks/*": ["./src/hooks/*"],
            "hooks": ["./src/hooks"],
            "pages/*": ["./src/pages/*"],
            "routes/*": ["./src/routes/*"],
            "providers/*": ["./src/providers/*"],
            "routes": ["./src/routes"],
            "services/*": ["./src/services/*"],
            "store/*": ["./src/store/*"],
            "store": ["./src/store"],
            "types/*": ["./src/types/*"],
            "types": ["./src/types"],
            "utils/*": ["./src/utils/*"],
            "utils": ["./src/utils"]
        }
    },
    "include": ["src"]
}
